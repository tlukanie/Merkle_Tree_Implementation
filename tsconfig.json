{
	"compilerOptions": {
	  "target": "es2020",
	  "module": "commonjs",
	  "outDir": "./dist",
	  "esModuleInterop": true,
	  "forceConsistentCasingInFileNames": true,
	  "strict": true,
	  "skipLibCheck": true,
	  "useUnknownInCatchVariables": false
	},
	"include": ["src/**/*", "tests/**/*"],
	"exclude": ["node_modules"]
  }